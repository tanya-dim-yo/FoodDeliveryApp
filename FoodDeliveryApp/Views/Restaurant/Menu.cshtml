@using System.Security.Claims
@model RestaurantWithProductsViewModel

@{
	Layout = "~/Views/Shared/_LayoutFoodTime.cshtml";
}
<div class="page-content bg-white">
	<!-- Banner  -->
	<div class="dz-bnr-inr style-1 text-center" style="background-image:url( @Url.Content(Model.Restaurant.ImageURL )"; background-size:cover; background-position:center;">
		<div class="container">
			<div class="dz-bnr-inr-entry">
				<h1>@Model.Restaurant.Title</h1>
				<!-- Breadcrumb Row -->
				<nav aria-label="breadcrumb" class="breadcrumb-row">
					<ul class="breadcrumb">
						<li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Начало</a></li>
						<li class="breadcrumb-item"><a href="@Url.Action("All","Restaurant")">Ресторанти</a></li>
						<li class="breadcrumb-item active" aria-current="page">@Model.Restaurant.Title</li>
					</ul>
				</nav>
				<!-- Breadcrumb Row End -->
			</div>
		</div>
	</div>
	<!-- Banner End -->
	<!-- Our Menu-->
