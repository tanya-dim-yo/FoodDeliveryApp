@{
	Layout = "~/Views/Shared/_LayoutFoodTimeIndex.cshtml";
}
<div class="page-content bg-white" padding-bottom="100px">
	<!-- Banner -->
	<div class="main-bnr-three overflow-hidden top-space">
		<div class="swiper-bnr-pagination left-align">
			<div class="main-button-prev"><i class="icon-arrow-up"></i></div>
			<div class="main-swiper3-pagination"></div>
			<div class="main-button-next"><i class="icon-arrow-down"></i></div>
		</div>
		<div class="main-slider-3">
			<div class="swiper-wrapper">
				<div class="swiper-slide">
					<div class="banner-inner overflow-hidden" data-swiper-parallax="-10" data-swiper-parallax-duration="0.5" style="background-image:url('foodtime/images/main-slider/slider2/bg1.jpg'); background-size:cover;">
						<div class="container">
							<div class="row align-items-center" data-swiper-parallax="-100">
								<div class="col-xl-7 col-lg-7 col-md-8">
									<div class="banner-content">
										<span class="sub-title text-primary">Здравословно хранене </span>
										<h1 class="title text-white">Митове за здравословното хранене</h1>
										<p class="bnr-text">Когато поемаме по пътя към по-здравословен начин на живот, е изключително важно да правим разлика между фактите и митовете...</p>

										<div class="banner-btn d-flex align-items-center">
											<a href="@Url.Action("Article", "Blog", new { articleId = 1 })" class="btn btn-primary btn-md shadow-primary m-r30 btn-hover-1"><span>Прочети статията</span></a>
											<a href="@Url.Action("All","Restaurant")" class="btn btn-outline-primary btn-md shadow-primary btn-hover-1"><span>Прегледай ресторанти</span></a>
										</div>
									</div>
								</div>
								<div class="col-xl-5 col-lg-5 col-md-4">
									<div class="banner-media">
										<img src="~/foodtime/images/main-slider/slider2/pic1.png" alt="/" data-swiper-parallax-scale="0.8">
									</div>
								</div>
							</div>
						</div>
						<img class="leaf" src="~/foodtime/images/main-slider/slider2/pic4.png" alt="/">
					</div>
				</div>
				<div class="swiper-slide">
					<div class="banner-inner overflow-hidden" data-swiper-parallax="-10" data-swiper-parallax-duration="0.5" style="background-image:url('foodtime/images/main-slider/slider2/bg2.jpg'); background-size:cover;">
						<div class="container">
							<div class="row align-items-center" data-swiper-parallax="-100">
								<div class="col-xl-7 col-lg-7 col-md-8">
									<div class="banner-content">
										<span class="sub-title text-primary">Суперхрани</span>
										<h1 class="title text-white">Суперхрани – какво трябва да знаем за тях? </h1>
										<p class="bnr-text">В стремежа към по-здравословен начин на живот и устойчиво отслабване често се споменава терминът – „суперхрани“...</p>

										<div class="banner-btn d-flex align-items-center">
											<a href="@Url.Action("Article", "Blog", new { articleId = 2 })" class="btn btn-primary btn-md shadow-primary m-r30 btn-hover-1"><span>Прочети статията</span></a>
											<a href="@Url.Action("All","Restaurant")" class="btn btn-outline-primary btn-md shadow-primary btn-hover-1"><span>Прегледай ресторанти</span></a>
										</div>
									</div>
								</div>
								<div class="col-xl-5 col-lg-5 col-md-4">
									<div class="banner-media">
										<img src="~/foodtime/images/main-slider/slider2/pic2.png" alt="/" data-swiper-parallax-scale="0.8">
									</div>
								</div>
							</div>
						</div>
						<img class="leaf" src="~/foodtime/images/main-slider/slider2/pic4.png" alt="/">
					</div>
				</div>
				<div class="swiper-slide">
					<div class="banner-inner overflow-hidden" data-swiper-parallax="-10" data-swiper-parallax-duration="0.5" style="background-image:url('foodtime/images/main-slider/slider2/bg3.jpg'); background-size:cover;">
						<div class="container">
							<div class="row align-items-center" data-swiper-parallax="-100">
								<div class="col-xl-7 col-lg-7 col-md-8">
									<div class="banner-content">
										<span class="sub-title text-primary">Хранене и възраст</span>
										<h1 class="title text-white">Хранене и възраст</h1>
										<p class="bnr-text ow fadeInUp">С напредване на възрастта, храненето може да помогне за подобряване на качеството на живот...</p>

										<div class="banner-btn d-flex align-items-center">
											<a href="@Url.Action("Article", "Blog", new { articleId = 3 })" class="btn btn-primary btn-md shadow-primary m-r30 btn-hover-1"><span>Прочети статията</span></a>
											<a href="@Url.Action("All","Restaurant")" class="btn btn-outline-primary btn-md shadow-primary btn-hover-1"><span>Прегледай ресторанти</span></a>
										</div>
									</div>
								</div>
								<div class="col-xl-5 col-lg-5 col-md-4">
									<div class="banner-media">
										<img src="~/foodtime/images/main-slider/slider2/pic3.png" alt="/" data-swiper-parallax-scale="0.8">
									</div>
								</div>
							</div>
						</div>
						<img class="leaf" src="~/foodtime/images/main-slider/slider2/pic4.png" alt="/">
					</div>
				</div>
			</div>
		</div>
	</div>
	<!--Banner-->
	<!-- Our Blog  -->
	<section class="content-inner overflow-hidden">
		<div class="container">
			<div class="row">
				<div class="col-xl-7 col-lg-12">
					<div class="section-head">
						<h2 class="title wow flipInX" data-wow-delay="0.2s">Избрани продукти</h2>
					</div>
					<div class="dz-card style-2 blog-half wow fadeInUp m-b30" data-wow-delay="0.4s">
						<div class="dz-media">
							<a href="@Url.Action("BlogStandard","FoodTime")"><img src="~/foodtime/images/blog/grid2/pic1.jpg" alt="/"></a>
							<div class="dz-date">12 Feb 2023</div>
						</div>
						<div class="dz-info">
							<h4 class="dz-title"><a href="@Url.Action("BlogStandard","FoodTime")">Chill Out with These Refreshing</a></h4>
							<div class="dz-meta">
								<ul>
									<li class="dz-user">
										<a href="javascript:void(0);">
											<i class="fa-solid fa-user"></i>
											By <span>RK Gupta</span>
										</a>
									</li>
									<li class="dz-comment">
										<a href="javascript:void(0);">
											<i class="fa-solid fa-message"></i>
											10 Comments
										</a>
									</li>
								</ul>
							</div>
							<div class="btn-wrapper p-t10">
								<a href="@Url.Action("BlogStandard","FoodTime")" class="btn btn-primary btn-hover-2">Read More</a>
							</div>
						</div>
					</div>
					<div class="dz-card style-2 blog-half wow fadeInUp m-b30" data-wow-delay="0.6s">
						<div class="dz-media">
							<a href="@Url.Action("BlogStandard","FoodTime")"><img src="~/foodtime/images/blog/grid2/pic2.jpg" alt="/"></a>
							<div class="dz-date">24 Feb 2023</div>
						</div>
						<div class="dz-info">
							<h4 class="dz-title"><a href="@Url.Action("BlogStandard","FoodTime")">Taste Excitement: A Sneak Peek into the</a></h4>
							<div class="dz-meta">
								<ul>
									<li class="dz-user">
										<a href="javascript:void(0);">
											<i class="fa-solid fa-user"></i>
											By <span>KK Sharma</span>
										</a>
									</li>
									<li class="dz-comment">
										<a href="javascript:void(0);">
											<i class="fa-solid fa-message"></i>
											24 Comments
										</a>
									</li>
								</ul>
							</div>
							<div class="btn-wrapper p-t10">
								<a href="@Url.Action("BlogStandard","FoodTime")" class="btn btn-primary btn-hover-2">Read More</a>
							</div>
						</div>
					</div>
				</div>
				<div class="col-xl-5 col-lg-12 m-b30 wow fadeInUp" data-wow-delay="0.4s">
					<div class="dz-card style-3 dz-card-large" style="background-image: url(foodtime/images/blog/large/pic1.jpg)">
						<video autoplay loop muted>
							<source src="~/foodtime/video/video.mp4" type="video/mp4">
						</video>
						<div class="dz-info">
							<h3 class="dz-title"><a href="@Url.Action("All","Blog")" class="text-white">Опознайте света на вкусната храна</a></h3>
							<div class="dz-meta">
								<ul>
									<li class="dz-date">@DateTime.UtcNow.ToString("dd.MM.yyyy")</li>
									<li class="dz-user">
										<a href="javascript:void(0);">
											<i class="fa-solid fa-user"></i>
											От <span>Екипът на FoodTime</span>
										</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Our Blog End  -->
</div>