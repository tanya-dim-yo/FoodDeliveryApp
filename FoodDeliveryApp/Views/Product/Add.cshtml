@model ProductFormModel

@{
	Layout = "~/Views/Shared/_LayoutFoodTime.cshtml";
}

	<!-- Product Detail Section -->
	<div class="page-content bg-white">
	<section class="content-inner-1 overflow-hidden">
		<div class="container">
			<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
				<form asp-action="Add" asp-controller="Product" method="post">
					<div class="mb-3">
						<label asp-for="@Model.Title" class="form-label-add-edit">Име</label>
						<input asp-for="@Model.Title" class="form-control" aria-required="true" />
						<span asp-validation-for="@Model.Title" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="@Model.Description" class="form-label-add-edit">Описание</label>
						<input asp-for="@Model.Description" class="form-control" aria-required="true" />
						<span asp-validation-for="@Model.Description" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="@Model.Price" class="form-label-add-edit">Цена</label>
						<input asp-for="@Model.Price" class="form-control" aria-required="true" />
						<span asp-validation-for="@Model.Price" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="@Model.IsVeggie" class="form-label-add-edit">Вегетарианско ястие</label>
						<input asp-for="@Model.IsVeggie" type="checkbox" class="form-check-input" />
						<span asp-validation-for="@Model.IsVeggie" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="@Model.ImageURL" class="form-label-add-edit">Image URL</label>
						<input asp-for="@Model.ImageURL" class="form-control" placeholder="Image URL" />
						<span asp-validation-for="@Model.ImageURL" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="@Model.ItemCategoryId" class="form-label-add-edit">Категория</label>
						<select asp-for="@Model.ItemCategoryId" class="form-control" aria-required="true">
							<option disabled selected value="">Изберете категория...</option>
								@foreach (var category in Model.Categories)
								{
									<option value="@category.Id">@category.Title</option>
								}
						</select>
						<span asp-validation-for="@Model.ItemCategoryId" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="@Model.SpicyCategoryId" class="form-label-add-edit">Степен на лютивост</label>
						<select asp-for="@Model.SpicyCategoryId" class="form-control" aria-required="true">
							<option disabled selected value="">Изберете степен...</option>
							@foreach (var spicyCategory in Model.SpicyCategories)
							{
									<option value="@spicyCategory.Id">@spicyCategory.Title</option>
							}
						</select>
						<span asp-validation-for="@Model.SpicyCategoryId" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Добави" />
					</div>
				</form>
			</div>
		</div>
	</section>
	</div>
	<!-- Product Detail Section -->

